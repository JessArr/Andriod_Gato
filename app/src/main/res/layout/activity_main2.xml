<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@drawable/fondo_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:paddingTop="7dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingEnd="20dp"
                            android:text="@string/textjugador_1"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/jugadorx"
                            android:textColor="@color/grey"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="x"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingEnd="20dp"
                            android:text="@string/textjugador_1"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:id="@+id/jugador0"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="0"
                            android:textColor="@color/grey"
                            android:textSize="30sp"
                            android:textAlignment="center"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="5dp"
                android:orientation="vertical"
                >
                <Button
                    android:id="@+id/BotonReiniciar"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:background="@drawable/reload"
                    android:layout_marginStart="5dp"
                    />

                <Button
                    android:id="@+id/pantallamarcador"
                    android:layout_marginTop="30dp"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:background="@drawable/info"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="@color/black"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:layout_margin="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="20"
                >

                <TextView
                    android:id="@+id/Cuadro"
                    android:textColor="@color/red"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:textSize="80sp"
                    android:textAlignment="center"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/Cuadro1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:textSize="80sp"
                    android:textAlignment="center"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_weight="0.6"/>
                <TextView
                    android:id="@+id/Cuadro2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:textSize="80sp"
                    android:textAlignment="center"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"

                android:layout_weight="20">
                <TextView
                    android:id="@+id/Cuadro3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:textSize="80sp"
                    android:textAlignment="center"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/Cuadro4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:textSize="80sp"
                    android:textAlignment="center"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_weight="0.6"/>
                <TextView
                    android:id="@+id/Cuadro5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:textSize="80sp"
                    android:textAlignment="center"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"

                android:layout_weight="20">
                <TextView
                    android:id="@+id/Cuadro6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:textSize="80sp"
                    android:textAlignment="center"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_weight="0.5"/>
                <TextView
                    android:id="@+id/Cuadro7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:textSize="80sp"
                    android:textAlignment="center"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_weight="0.6"/>
                <TextView
                    android:id="@+id/Cuadro8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:textSize="80sp"
                    android:textAlignment="center"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="40dp">
                <Button
                    android:id="@+id/BotonNuevo"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="@string/nuevo"
                    android:backgroundTint="@color/blue"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutGanador"
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:background="@drawable/fondo_2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gnador"
            android:textSize="50sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/ganador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            />
        <TextView
            android:id="@+id/contador"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Reiniciando: "
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>